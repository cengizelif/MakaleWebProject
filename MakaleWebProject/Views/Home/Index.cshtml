@using Makale.Entities
@model List<Not>

@{ ViewBag.Title = "Index"; }

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-md-3">
            @Html.Partial("_PartialKategoriler")
        </div>

        <div class="col-md-9">

            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="https://picsum.photos/seed/picsum/800/300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://picsum.photos/seed/picsum/800/300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://picsum.photos/seed/picsum/800/300" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>

            <div class="row">
                @foreach (var item in Model)
                {
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="https://picsum.photos/seed/picsum/320/150" alt="">
            <div class="caption">
                <h4>
                    <a href="#">@item.Baslik</a>
                </h4>
                <h6 class="text-right">
                    <span class="glyphicon glyphicon-user"></span>  @item.Kullanici.KullaniciAdi <br />
                    <span class="glyphicon glyphicon-time"></span>@item.DegistirmeTarihi.ToString("dd.MM.yy HH:mm")
                </h6>

                @if (string.IsNullOrEmpty(item.Icerik) == false && item.Icerik.Length > 70)
                {
                    <p>
                        @(item.Icerik.Substring(0,70)+"...")
                    </p>
                    <p>
                        <a href="#" class="btn btn-default btn-xs">devamı
                        <span class="glyphicon glyphicon-chevron-right"></span></a>
                    </p>

                }
                else
                {
                    <p>
                        @item.Icerik
                    </p>

                }


            </div>
            <div><hr /></div>
            <div class="ratings">
                <p class="pull-right">
                    <button class="btn btn-default btn-xs" data-toggle="modal" data-target="#myModal">
                        <span class="glyphicon glyphicon-comment text-danger"></span>    Yorumlar
                    </button>
                </p>

                <p>
                    <button class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-heart-empty"></span> @item.BegeniSayisi
                    </button>

                </p>
            </div>
        </div>
    </div>}




            </div>

        </div>

    </div>

</div>
<!-- /.container -->

@section footer{
    @Html.Partial("_PartialFooter")
    } 

@Bootstrap.ModalPopup(id:"myModal")

<script>

    $('#myModal').on('show.bs.modal', function (e) {

        $('#myModal_body').load("/Yorum/YorumGoster");

})
</script>