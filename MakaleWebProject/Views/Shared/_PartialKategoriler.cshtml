@using Makale.BusinessLayer
@using Makale.Entities
@{ 
    KategoriYonet ky = new KategoriYonet();
    List<Kategori> liste=ky.KategoriGetir();
}

<p class="lead">Kategoriler</p>
<div class="list-group">

    <a href="/Home/Index" class="list-group-item"><span class="glyphicon glyphicon-align-right"></span>Tümü</a>

    @foreach (Kategori kat in liste)
    {
        <a href="/Home/Kategori/@kat.Id" class="list-group-item" title="@kat.Aciklama"><span class="glyphicon glyphicon-align-right"></span>@kat.Baslik</a>
    }


</div>
